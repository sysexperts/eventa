{
  "name": "local-events-backend",
  "private": true,
  "version": "0.1.0",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "dev:docker": "prisma migrate deploy && prisma db seed && tsx src/server.ts",
    "build": "tsc -p tsconfig.json",
