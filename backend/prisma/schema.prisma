generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum EventCategory {
  // Musik & Bühne
  KONZERT
  FESTIVAL
  MUSICAL
  OPER
  KABARETT
  OPEN_MIC
  DJ_EVENT

  // Bühne & Darstellung
  THEATER
  COMEDY
  TANZ
  ZAUBERSHOW

  // Kunst & Kultur
  AUSSTELLUNG
  LESUNG
  FILM
  FOTOGRAFIE
  MUSEUM

  // Märkte & Messen
  FLOHMARKT
  WOCHENMARKT
  WEIHNACHTSMARKT
  MESSE
  FOOD_FESTIVAL

  // Sport & Fitness
  SPORT
  LAUF
  TURNIER
  YOGA
  WANDERUNG

  // Familie & Kinder
  KINDERTHEATER
  FAMILIENTAG
  KINDER_WORKSHOP

  // Essen & Trinken
  WEINPROBE
  CRAFT_BEER
  KOCHKURS
  FOOD_TRUCK
  KULINARISCHE_TOUR

  // Bildung & Networking
  WORKSHOP
  SEMINAR
  KONFERENZ
  NETWORKING
  VORTRAG

  // Nachtleben & Party
  CLUBNACHT
  KARAOKE
  PARTY

  // Saisonales & Feste
  KARNEVAL
  OKTOBERFEST
  SILVESTER
  STADTFEST
  STRASSENFEST

  // Sonstiges
  SONSTIGES
}

enum ScrapedEventStatus {
  PENDING
  APPROVED
  REJECTED
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String
  name         String
  website      String?
  address      String?
  zip          String?
  city         String?
  phone        String?
  companyName  String?
  isPartner       Boolean  @default(false)
  isAdmin         Boolean  @default(false)
  promotionTokens Int      @default(0)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  events         Event[]
  scrapedEvents  ScrapedEvent[]
  monitoredUrls  MonitoredUrl[]
  artistReviews  ArtistReview[]
  artistFollows  ArtistFollow[]
  favorites      EventFavorite[]
}

model Event {
  id               String        @id @default(cuid())
  title            String
  shortDescription String
  description      String
  category         EventCategory
  startsAt         DateTime
  endsAt           DateTime?
  address          String
  city             String
  country          String
  imageUrl         String?
  heroVideoUrl     String?
  ticketUrl        String?
  price            String?
  tags             String[]  @default([])
  community        String?
  isFeatured       Boolean   @default(false)
  heroFocusY       Int       @default(50)
  isPromoted       Boolean   @default(false)
  promotedAt       DateTime?

  organizerId String
  organizer   User          @relation(fields: [organizerId], references: [id], onDelete: Cascade)

  artists      EventArtist[]
  views        EventView[]
  ticketClicks EventTicketClick[]
  favorites    EventFavorite[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([category])
  @@index([startsAt])
  @@index([city])
}

model Artist {
  id         String   @id @default(cuid())
  name       String
  slug       String   @unique
  bio        String   @default("")
  imageUrl        String?
  headerImageUrl  String?
  genre      String   @default("")
  hometown   String   @default("")
  tags       String[] @default([])
  website    String?
  instagram  String?
  spotify    String?
  youtube    String?
  tiktok     String?
  facebook   String?
  soundcloud String?
  bandcamp   String?
  pressQuote String   @default("")

  events    EventArtist[]
  reviews   ArtistReview[]
  followers ArtistFollow[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model EventArtist {
  id       String @id @default(cuid())
  eventId  String
  event    Event  @relation(fields: [eventId], references: [id], onDelete: Cascade)
  artistId String
  artist   Artist @relation(fields: [artistId], references: [id], onDelete: Cascade)

  @@unique([eventId, artistId])
  @@index([eventId])
  @@index([artistId])
}

model ArtistReview {
  id        String   @id @default(cuid())
  rating    Int
  comment   String   @default("")

  artistId  String
  artist    Artist   @relation(fields: [artistId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([artistId, userId])
  @@index([artistId])
  @@index([userId])
}

model ArtistFollow {
  id        String   @id @default(cuid())

  artistId  String
  artist    Artist   @relation(fields: [artistId], references: [id], onDelete: Cascade)
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())

  @@unique([artistId, userId])
  @@index([artistId])
  @@index([userId])
}

model MonitoredUrl {
  id          String   @id @default(cuid())
  url         String
  label       String   @default("")
  isActive    Boolean  @default(true)
  isGlobal    Boolean  @default(false)
  defaultCategory EventCategory?
  defaultCity String?
  lastScrapedAt DateTime?
  lastEventCount Int    @default(0)
  errorCount  Int      @default(0)
  lastError   String?

  userId      String
  user        User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId])
  @@index([isActive])
  @@index([isGlobal])
}

model ScrapedEvent {
  id               String             @id @default(cuid())
  sourceUrl        String
  title            String
  shortDescription String             @default("")
  description      String             @default("")
  category         EventCategory      @default(SONSTIGES)
  startsAt         DateTime?
  endsAt           DateTime?
  address          String             @default("")
  city             String             @default("")
  country          String             @default("DE")
  imageUrl         String?
  ticketUrl        String?
  price            String?
  tags             String[]           @default([])
  status           ScrapedEventStatus @default(PENDING)
  rawHtml          String?            @default("")

  organizerId String
  organizer   User @relation(fields: [organizerId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([organizerId])
  @@index([status])
}

model EventView {
  id        String   @id @default(cuid())
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([eventId])
  @@index([createdAt])
}

model EventTicketClick {
  id        String   @id @default(cuid())
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@index([eventId])
  @@index([createdAt])
}

model EventFavorite {
  id        String   @id @default(cuid())
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  eventId   String
  event     Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())

  @@unique([userId, eventId])
  @@index([userId])
  @@index([eventId])
}
